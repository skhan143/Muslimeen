{
  "expo": {
    "newArchEnabled": true,
  "name": "Qalby Muslim",
  "slug": "qalbymuslim",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.Muslimeen",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSUserTrackingUsageDescription": "This app may request permission to track for improved personalization.",
        "NSLocationWhenInUseUsageDescription": "Needed to calculate prayer times and Qibla direction.",
        "NSCalendarsUsageDescription": "Optional: used for adding prayer reminders to your calendar."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.Muslimeen"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "privacy": {
      "policyUrl": "https://qalbymuslim.com/privacy-policy"
    },
    "extra": {
      "eas": {
        "projectId": "e3afeb57-c1cd-4be6-af15-e2a3a73b28ce"
      }
    }
  }
}
