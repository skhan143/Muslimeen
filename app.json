{
  "expo": {
    "newArchEnabled": true,
    "name": "Qalby Muslim",
    "slug": "qalbymuslim",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.qalbymuslim.app",
      "appleId": "6753021182",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSUserTrackingUsageDescription": "This app may request permission to track for improved personalization.",
        "NSLocationWhenInUseUsageDescription": "Needed to calculate prayer times and Qibla direction.",
        "NSCalendarsUsageDescription": "Optional: used for adding prayer reminders to your calendar.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "aps-environment": "production",
        "com.apple.security.application-groups": [
          "group.com.qalbymuslim.app.widget"
        ]
      },
      "buildNumber": "2"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.qalbymuslim.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "privacy": {
      "policyUrl": "https://qalbymuslim.com/privacy-policy"
    },
    "extra": {
      "eas": {
        "projectId": "fdbdbc28-f28c-4b39-9d9b-0ef53c612e91"
      }
    },
    "owner": "shahariyar.khan"
  }
}
